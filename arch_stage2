#!/bin/bash -e

# (1) set hostname
lines /etc/hostname "${INSTALL_HOSTNAME}"

# (2) set timezone
_cmd_ ln -sf "/usr/share/zoneinfo/${INSTALL_TZNAME}" /etc/localtime

# (3) generate locales
lines /etc/locale.gen "${INSTALL_LOCALE}"
_cmd_ locale-gen

# (4) set locales
lines /etc/locale.conf "LANG=${INSTALL_LOCALE/ */}"

# (5) TODO: /etc/vconsole.conf

# (6a) configure network adapters
read -a intf_mac <<< ${INSTALL_INTERFACES}
for i in `seq 0 2 ${#intf_mac[*]}`; do
    let j=i+1
    echo "SUBSYSTEM==\"net\", ACTION==\"add\", ATTR{address}==\"${intf_mac[j]}\", NAME=\"${intf_mac[i]}\"" >> /etc/udev/rules.d/10-network.rules
done

# (6b) install netctl profiles
for profile in ${INSTALL_NETCTL}; do
    _cmd_ curl -s http://${INSTALL_HOST}/netctl/${profile} > /etc/netctl/${profile}
done

# (7) configure /etc/mkinitcpio.conf and genrate initramfs
if [ ${INSTALL_DISK_ENCRYPTION} = luks ]; then
    _cmd_ sed -i 's/^FILES=""/FILES="$(find \/etc\/luks.keys -type f 2>\/dev\/null)"/' /etc/mkinitcpio.conf
    _cmd_ sed -i 's/^HOOKS="\(.*\)"$/HOOKS="\1 systemd sd-encrypt sd-lvm2"/' /etc/mkinitcpio.conf
fi
_cmd_ mkinitcpio -p linux
_cmd_ chmod -v 0600 /boot/*.img

# (8) set root password
_cmd_ chpasswd <<< "root:${INSTALL_PASSWORD}"

# (9) configure and install grub
if [ ${INSTALL_DISK_ENCRYPTION} = luks ]; then
    lines /etc/default/grub 'GRUB_ENABLE_CRYPTODISK=y'
fi
_cmd_ sed -i '/^#GRUB_COLOR_.*$/ s/^#//' /etc/default/grub
_cmd_ sed -i "/^GRUB_CMDLINE_LINUX_DEFAULT/ s!=\"quiet\"!=\"${INSTALL_GRUB_CMDLINE}\"!" /etc/default/grub
_cmd_ grub-mkconfig -o /boot/grub/grub.cfg

case ${INSTALL_GRUB_FIRMWARE} in
    bios)
        _cmd_ grub-install --target=i386-pc --recheck ${INSTALL_GRUB_DISK}
        ;;
    uefi)
        _cmd_ grub-install --target=x86_64-efi --recheck --efi-directory=/boot/efi --bootloader-id=grub
        _cmd_ mkdir -v /boot/efi/EFI/boot
        _cmd_ cp -v /boot/efi/EFI/grub/grubx64.efi /boot/efi/EFI/boot/bootx64.efi
        ;;
esac

# enable services
for service in ${INSTALL_SERVICES}; do
    case "${service}" in
        netctl@*.service)   _cmd_ netctl enable $(sed 's/netctl@\(.*\)\.service/\1/' <<< "${service}") ;;
        *.target)           _cmd_ systemctl set-default ${service} ;;
        *)                  _cmd_ systemctl enable ${service} ;;
    esac
done

# install pip
_cmd_ curl -s "https://bootstrap.pypa.io/get-pip.py" > /tmp/get-pip.py
_cmd_ python2 /tmp/get-pip.py --user --no-cache-dir --disable-pip-version-check
lines /etc/profile.d/local-bin.sh 'PATH=$PATH:$HOME/.local/bin'

# run post-install function
if [ "$(type -t post_install)" = "function" ]; then
    post_install
fi
